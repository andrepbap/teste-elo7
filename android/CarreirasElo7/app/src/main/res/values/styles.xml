<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/menuPrimary</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="actionMenuTextColor">@color/menuText</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.ActionButton.Overflow</item>
    </style>

    <style name="AppTheme.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/menuText</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="logo">@drawable/logo</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>


</resources>

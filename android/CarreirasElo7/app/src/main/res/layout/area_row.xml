<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray">

    <ImageView
        android:id="@+id/area_row_container_left"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.47"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/area_row_container_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/area_row_container_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/area_row_container_left"
        app:layout_constraintTop_toTopOf="@+id/area_row_container_left"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/area_row_icon_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/area_row_container_left"
        app:layout_constraintEnd_toEndOf="@+id/area_row_container_left"
        app:layout_constraintStart_toStartOf="@+id/area_row_container_left"
        app:layout_constraintTop_toTopOf="@+id/area_row_container_left"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_engenharia" />

    <ImageView
        android:id="@+id/area_row_icon_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/area_row_container_right"
        app:layout_constraintEnd_toEndOf="@+id/area_row_container_right"
        app:layout_constraintStart_toStartOf="@+id/area_row_container_right"
        app:layout_constraintTop_toTopOf="@+id/area_row_container_right"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_atendimento" />

    <TextView
        android:id="@+id/area_row_text_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/area_row_container_left"
        app:layout_constraintEnd_toEndOf="@+id/area_row_container_left"
        app:layout_constraintStart_toStartOf="@+id/area_row_container_left"
        app:layout_constraintTop_toBottomOf="@+id/area_row_icon_left" />

    <TextView
        android:id="@+id/area_row_text_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/area_row_container_right"
        app:layout_constraintEnd_toEndOf="@+id/area_row_container_right"
        app:layout_constraintStart_toStartOf="@+id/area_row_container_right"
        app:layout_constraintTop_toBottomOf="@+id/area_row_icon_right" />
</android.support.constraint.ConstraintLayout>
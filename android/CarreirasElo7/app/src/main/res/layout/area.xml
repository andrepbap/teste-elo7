<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    app:layout_flexBasisPercent="50%">

    <ImageView
        android:id="@+id/area_background"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/area-imagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/area_background"
        app:layout_constraintEnd_toEndOf="@+id/area_background"
        app:layout_constraintStart_toStartOf="@+id/area_background"
        app:layout_constraintTop_toTopOf="@+id/area_background"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_engenharia" />

    <TextView
        android:id="@+id/area_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/area_background"
        app:layout_constraintEnd_toEndOf="@+id/area_background"
        app:layout_constraintStart_toStartOf="@+id/area_background"
        app:layout_constraintTop_toBottomOf="@+id/area-imagem" />
</android.support.constraint.ConstraintLayout>